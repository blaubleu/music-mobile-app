<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_list"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:background="@color/background"
    android:horizontalSpacing="16dp"
    android:orientation="vertical"
    android:verticalSpacing="8dp"
    tools:context=".ArtistList">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="@dimen/d150"
        android:layout_height="@dimen/d150"
        android:layout_gravity="fill"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:paddingLeft="@dimen/d4dp"
        android:textColor="@color/softTan"
        android:textSize="@dimen/d22sp"
        android:textStyle="bold"
        tools:text="artist" />

    <TextView
        android:id="@+id/album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:paddingLeft="@dimen/d4dp"
        android:textColor="@color/softTan"
        android:textSize="@dimen/d16sp"
        tools:text="album" />

</LinearLayout>