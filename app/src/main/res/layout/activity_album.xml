<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="420dp"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".Album">

    <ImageView
        android:id="@+id/coverDetail"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sodastereo2" />

    <LinearLayout
        android:id="@+id/detailContainer"
        android:layout_width="match_parent"
        android:layout_below="@id/coverDetail"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/songDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:textAlignment="center"
            android:textSize="22sp"
            android:text="album"
            android:textStyle="bold"
            tools:text="song" />

        <TextView
            android:id="@+id/artistDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:paddingBottom="6dp"
            android:text="artist"
            tools:text="artist" />
        <View
            android:layout_width="wrap_content"
            android:background="#a6a6a6"
            android:layout_height="1dp"/>

        <!--should this be a fragment?-->
        <ListView
            android:id="@+id/songs_detail"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical"
            android:paddingVertical="6dp"
            android:layout_marginLeft="34dp"
            tools:text="song title"
            android:textSize="@dimen/d16sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        app:itemIconTint="#a6a6a6"
        app:itemTextColor="#a6a6a6"
        app:menu="@menu/playmenu" />
</RelativeLayout>